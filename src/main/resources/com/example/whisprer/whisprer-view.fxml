<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.whisprer.WhisprerController">
    
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button text="Settings" onAction="#openSettingsWindow"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 4;"/>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/17">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>

            <Text text="ðŸŽ¤ Whisprer" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

            <Text text="Voice to Text Transcription" style="-fx-font-size: 14px; -fx-fill: #7f8c8d; -fx-padding: 0 0 20 0;"/>

            <StackPane>
                <Button fx:id="recordButton"
                        style="-fx-background-radius: 50%; -fx-min-width: 100; -fx-min-height: 100; -fx-max-width: 100; -fx-max-height: 100; -fx-background-color: #3498db; -fx-cursor: hand;"
                        onAction="#onRecordButtonClick">
                    <graphic>
                        <Text text="ðŸŽ™" style="-fx-font-size: 32;"/>
                    </graphic>
                </Button>
            </StackPane>

            <Label fx:id="statusLabel" text="Click the microphone to start recording"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14; -fx-padding: 20 0 0 0;"/>

            <TextArea fx:id="transcriptArea" wrapText="true" editable="false"
                      style="-fx-min-height: 100; -fx-pref-height: 150; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      promptText="Your transcription will appear here..."/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Copy to Clipboard" onAction="#onCopyToClipboard"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 4;"/>
                <Button text="Clear" onAction="#onClearText"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 4;"/>
            </HBox>

            <Text text="Your transcription is automatically copied to clipboard"
                  style="-fx-font-size: 11; -fx-fill: #95a5a6; -fx-padding: 10 0 0 0;"/>
        </VBox>
    </center>
</BorderPane>
